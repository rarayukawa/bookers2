
<div class="row">
  <div class="col-md-5">
 <% if @user.errors.any? %>
            <h3><%= @user.errors.count %>errors prohibited this book from being saved:<br>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
            <% end %>
<h1>User info</h1>
<%= form_for(@user) do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "Image" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%><br>
  <%= f.submit "Update User", class: "btn btn-primary" %>
<% end %>

  </div>
</div>